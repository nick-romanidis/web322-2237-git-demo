<h2>Employee List</h2>
<p>Visit the <a href="/about">about page</a>.</p>
<p>This is an even more amazing home page.</p>

<table border='1'>
    <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Occupation</th>
        <th>Company</th>
    </tr>
    <% if (employees && employees.length > 0) { %>
        <% employees.forEach(employee => { %>
            <%- include("partials/employee", employee) %>
        <% }); %>
    <% } else { %>
        <tr>
            <td colspan="4">There are no employees to show.</td>
        </tr>
    <% } %>
</table>
